---
import fs from "node:fs";
import path from "node:path";

const screenshotsDir = path.join(process.cwd(), "public/discord-screenshots");
const files = fs.readdirSync(screenshotsDir)
    .filter(f => f.endsWith(".png") || f.endsWith(".jpg"))
    .sort();

const screenshots = files.map(f => `/discord-screenshots/${encodeURIComponent(f)}`);
---

<button type="button" class="discord-help-btn" id="open-discord-modal">
    Comment rejoindre le canal Discord ?
</button>

<div class="modal-overlay" id="discord-modal" aria-hidden="true">
    <div class="modal" role="dialog" aria-modal="true" aria-labelledby="modal-title">
        <button type="button" class="modal-close" aria-label="Fermer">&times;</button>

        <h3 id="modal-title">Rejoindre le canal Discord</h3>

        <div class="instructions">
            <ol>
                <li>Allez sur <a href="https://discord.com/app" target="_blank" rel="noopener">discord.com/app</a> et créez un compte</li>
                <li>Rendez-vous sur <a href="https://astro-fr.fr/" target="_blank" rel="noopener">astro-fr.fr</a> et cliquez sur le lien Discord</li>
                <li>Une fois sur le serveur, allez dans <strong>Canaux & rôles</strong></li>
                <li>Recherchez et sélectionnez le canal <strong>fabrication et contrôle optiques</strong></li>
                <li>Validez pour accéder au canal de l'événement</li>
            </ol>
        </div>

        <div class="carousel">
            <button type="button" class="carousel-btn prev" aria-label="Image précédente">&lsaquo;</button>

            <div class="carousel-container">
                {screenshots.map((src, i) => (
                    <img
                        src={src}
                        alt={`Étape ${i + 1}`}
                        class="carousel-img"
                        data-index={i}
                        style={i === 0 ? "" : "display: none"}
                    />
                ))}
            </div>

            <button type="button" class="carousel-btn next" aria-label="Image suivante">&rsaquo;</button>
        </div>

        <div class="carousel-indicator">
            <span class="current-index">1</span> / <span class="total">{screenshots.length}</span>
        </div>
    </div>
</div>

<script>
    const modal = document.getElementById('discord-modal')!;
    const openBtn = document.getElementById('open-discord-modal')!;
    const closeBtn = modal.querySelector('.modal-close')!;
    const prevBtn = modal.querySelector('.carousel-btn.prev')!;
    const nextBtn = modal.querySelector('.carousel-btn.next')!;
    const images = modal.querySelectorAll('.carousel-img') as NodeListOf<HTMLImageElement>;
    const currentIndexEl = modal.querySelector('.current-index')!;

    let currentIndex = 0;

    function showImage(index: number) {
        images.forEach((img, i) => {
            img.style.display = i === index ? 'block' : 'none';
        });
        currentIndexEl.textContent = String(index + 1);
        currentIndex = index;
    }

    function openModal() {
        modal.setAttribute('aria-hidden', 'false');
        modal.classList.add('open');
        document.body.style.overflow = 'hidden';
    }

    function closeModal() {
        modal.setAttribute('aria-hidden', 'true');
        modal.classList.remove('open');
        document.body.style.overflow = '';
    }

    openBtn.addEventListener('click', openModal);

    closeBtn.addEventListener('click', closeModal);

    modal.addEventListener('click', (e) => {
        if (e.target === modal) closeModal();
    });

    document.addEventListener('keydown', (e) => {
        if (!modal.classList.contains('open')) return;
        if (e.key === 'Escape') closeModal();
        if (e.key === 'ArrowLeft') showImage((currentIndex - 1 + images.length) % images.length);
        if (e.key === 'ArrowRight') showImage((currentIndex + 1) % images.length);
    });

    prevBtn.addEventListener('click', () => {
        showImage((currentIndex - 1 + images.length) % images.length);
    });

    nextBtn.addEventListener('click', () => {
        showImage((currentIndex + 1) % images.length);
    });
</script>

<style>
